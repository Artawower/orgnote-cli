{
  "compilerOptions": {
    "outDir": "./dist/",
    "skipLibCheck": true,
    "target": "ES2021",
    "sourceMap": false,
    "strictNullChecks": true,
    "module": "es2020",
    "allowJs": false,
    "baseUrl": "./",
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": false,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noEmitOnError": false,
    "noImplicitAny": true,
    "noUnusedParameters": true
  },
  "include": [
    "./src/**/*",
    "index.ts"
  ],
  "inlineSources": true,
  "inlineSourceMap": true,
  "exclude": [
    "node_modules",
    "dist"
  ]
}