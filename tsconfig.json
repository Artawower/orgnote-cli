{
  "compilerOptions": {
    "target": "esnext",
    "rootDir": "./",
    "baseUrl": "./src",
    "module": "esnext",
    "outDir": "dist",
    "removeComments": true,
    "declaration": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "types": ["node", "org-mode-ast", "vitest/importMeta"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
